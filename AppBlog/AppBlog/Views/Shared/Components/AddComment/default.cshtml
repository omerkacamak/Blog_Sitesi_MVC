@using Datam.Models
@model Comment






















<div class="row justify-content-center mt-5">

    <div class="col-lg-12">
        <h5 class="comment-title">Yorum Yap</h5>

        @using (Html.BeginForm("YorumEkle", "Home", new { area = "Blog" }, FormMethod.Post))
        {
            <div class="row">
                
               @Html.HiddenFor(i=>i.CommentTitle,new{@class="form-control",@style="background: #fff;"})
                <div class="col-12 mb-3">
                     @Html.Label("Yorumunuz")
                @Html.TextAreaFor(i=>i.CommentContent,new{@class="form-control"})
                </div>
                <input type="text" hidden name="blogid" value="@ViewBag.BlogId">
                <div class="col-12">
                    <input type="submit" class="btn btn-primary" value="Gönder">
                </div>
            </div>
        }

    </div>
</div>










