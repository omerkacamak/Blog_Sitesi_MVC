@using Datam.Models
@model Writer




<section id="posts" class="posts">
    <div class="container" data-aos="fade-up">
        <div class="row g-5">

            <!--Hakkında-->
            <div class="col-lg-4">
                <div class="post-entry-1 lg">
                   
                    <div class="post-meta"><span class="date">@Model.Blogs[0].Category.CategoryName</span> <span class="mx-1">&bullet;</span> <span>Jul 5th '22</span></div>
                    <h2><a href="single-post.html">Hakkında</a></h2>
                    <p class="mb-4 d-block">@Model.Blogs[0].BlogContent.Substring(0,400)... <a href="#">Devamını Oku</a></p>

                    <div class="d-flex align-items-center author">
                        <div class="photo"><img src="~/assets/img/person-1.jpg" alt="" class="img-fluid"></div>
                        <div class="name">
                            <h3 class="m-0 p-0">@Model.Blogs[0].Writer.WriterName</h3>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-6">
                <div class="row g-5">

                    @foreach (var item2 in Model.Blogs)
                    {
                        <div class="col-lg-6 border-start custom-border">

                            <div class="post-entry-1">
                                <a href="/Blog/Home/Index/@item2.BlogID"><img src="~/assets/img/post-landscape-2.jpg" alt="" class="img-fluid"></a>
                                <div class="post-meta text-center">
                                    <a href="/Writer/Other/Index/@item2.WriterID" class="date">@item2.Writer.WriterName</a> <span class="mx-1">&bullet;</span>
                                    <span class="date">@item2.Category.CategoryName</span>
                                    <br>
                                    <span>@item2.BlogCreateDate.ToLongDateString()</span>

                                </div>
                                <h2 class="text-center"><a href="/Blog/Home/Index/@item2.BlogID">@item2.BlogTitle</a></h2>
                                <p class="mb-4 d-block text-center">
                                    @item2.BlogContent.Substring(0,40)...
                                    
                                </p>
                                <div class="row">
                                <div class="col"><a class="btn btn-primary" href="/Blog/Home/Index/@item2.BlogID">Devamını Oku</a> </div>    
                                <div class="col"><a class="btn btn-success" href="/Blog/Crud/Update/@item2.BlogID">Düzenle</a> </div>    
                                </div>
                            </div>
                            <div class="d-flex align-items-center author">
                                <div class="photo text-center"><img src="~/assets/img/person-1.jpg" alt="" class="img-fluid"></div>
                                <div class="name text-center">
                                    <h3 class="m-0 p-0">@item2.Writer.WriterName</h3>
                                </div>
                            </div>
                            <hr>




                        </div>
                    }





                </div>
            </div>
            <div class="col-lg-2">
                <!-- Son Yazıları -->
                <div class="col-lg">

                    <div class="trending">
                        <h3>Son Yazıları</h3>
                        <ul class="trending-post">
                            <li>
                                <a href="single-post.html">
                                    <span class="number">1</span>
                                    <h3>The Best Homemade Masks for Face (keep the Pimples Away)</h3>
                                    <span class="author">Jane Cooper</span>
                                </a>
                            </li>
                            <li>
                                <a href="single-post.html">
                                    <span class="number">2</span>
                                    <h3>17 Pictures of Medium Length Hair in Layers That Will Inspire Your New Haircut</h3>
                                    <span class="author">Wade Warren</span>
                                </a>
                            </li>
                            <li>
                                <a href="single-post.html">
                                    <span class="number">3</span>
                                    <h3>13 Amazing Poems from Shel Silverstein with Valuable Life Lessons</h3>
                                    <span class="author">Esther Howard</span>
                                </a>
                            </li>
                            <li>
                                <a href="single-post.html">
                                    <span class="number">4</span>
                                    <h3>9 Half-up/half-down Hairstyles for Long and Medium Hair</h3>
                                    <span class="author">Cameron Williamson</span>
                                </a>
                            </li>
                            <li>
                                <a href="single-post.html">
                                    <span class="number">5</span>
                                    <h3>Life Insurance And Pregnancy: A Working Mom’s Guide</h3>
                                    <span class="author">Jenny Wilson</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div> <!-- End Trending Section -->
            </div>

        </div> <!-- End .row -->
    </div>
</section>












