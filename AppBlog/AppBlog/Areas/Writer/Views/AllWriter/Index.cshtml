@using Datam.Models
@model List<Writer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AnaLayout.cshtml";
}

<div class="page-header text-center">
    
      <h1>  <small>Yazarlar</small>  </h1>
    
</div>
<div class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list">
					<thead>
						<tr>
							<th><span>Yazar</span></th>
							<th><span>Üyelik Tarihi</span></th>
							<th class="text-center"><span>Durumu</span></th>
							<th><span>Email</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
					   {
						   <tr>
							<td>
								<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
								<a href="/Writer/Other/Index/@item.WriterID" class="user-link">@item.WriterName</a>
								@if (item.RoleId==1)
							   {
								   <span class="user-subhead">Yazar</span>
							   }
							   
							</td>
							<td>
								2013/08/08
							</td>
							<td class="text-center">
								@if(item.WriterStatus==true)
										{
											<span class="label label-default bg-success">Aktif</span>
										}
										else
										{
											<span class="label label-default bg-dark">Aktif Değil</span>
										}
									</td>
							<td>
								<a href="#">@item.WriterMail</a>
							</td>
							<td style="width: 20%;">
								<a href="#" class="table-link btn btn-primary">
									Takip Et
								</a>
								<a href="/Writer/Other/Index/@item.WriterID" class="table-link btn btn-warning">
									Profil
								</a>
								
							</td>
						</tr>
					   }
						
					</tbody>
				</table>
			</div>
			<ul class="pagination pull-right">
				<li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
				<li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
			</ul>
		</div>
	</div>
</div>
</div>

